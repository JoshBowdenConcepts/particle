{
	"compilerOptions": {
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"module": "CommonJS",
		"outDir": "./dist",
		"declaration": true,
		"sourceMap": false, // Can be toggled when developing
		"types": [
			"node"
		],
		"noEmit": true
	},
	"include": ["index.ts"],
	"exclude": ["dist", "node_modules", "**/*.spec.ts", "**/*.spec.tsx"]
}
